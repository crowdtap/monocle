{
  "variables": {
    "ssh_key": "{{env `HOME`}}/.ssh/id_rsa"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "source_ami": "ami-4ac56422",
      "ssh_username": "deploy",
      "ssh_private_key_file": "{{user `ssh_key`}}",
      "instance_type": "c3.xlarge",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2",
          "volume_size": 10
        }
      ],
      "region": "us-east-1",
      "vpc_id": "vpc-87cb79ec",
      "subnet_id": "subnet-e90c41c1",
      "iam_instance_profile": "production",

      "ami_name": "monocle-app-{{isotime | clean_ami_name}}"
    }
  ],

  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": ["berks-cookbooks"],
      "run_list": ["recipe[monocle::app]"],
      "skip_install": true
    }
  ]
}
